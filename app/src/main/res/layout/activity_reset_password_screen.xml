<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Reset_Password_Screen">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="422dp"
        android:layout_height="270dp"
        app:srcCompat="@drawable/bshape" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="386dp"
        android:layout_height="291dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        app:srcCompat="@drawable/fadeimg"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="329dp" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/textView"
        app:srcCompat="@drawable/lock_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="145dp"
            app:srcCompat="@drawable/logo2" />

        <EditText
            android:id="@+id/new_p_btn"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/login_edit_background"
            android:hint="New Password"
            android:minHeight="48dp"
            android:padding="5dp"
            android:textColor="#404040"
            android:textColorHint="#404040"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/confirm_p_btn"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nic_txt"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_edit_background"
            android:hint="Confirm Password"
            android:minHeight="48dp"
            android:padding="5dp"
            android:textColor="#404040"
            android:textColorHint="#404040"
            android:textSize="15sp" />


        <Button
            android:id="@+id/reset_p_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:backgroundTint="#F3D068"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="Reset Password"
            android:textColor="#404040"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text="Need Any"
        android:textColor="#404040" />

    <TextView
        android:id="@+id/login_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_toRightOf="@id/textView4"
        android:padding="5dp"
        android:text="Help?"
        android:textColor="#404040"
        android:textStyle="bold" />

</RelativeLayout>