<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Case_Submitted_screen">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="422dp"
        android:layout_height="270dp"
        app:srcCompat="@drawable/bshape" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="386dp"
        android:layout_height="291dp"
        android:layout_marginTop="240dp"
        app:srcCompat="@drawable/fadeimg"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F3D068"
        android:layout_centerHorizontal="true"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="Done"
        android:textColor="#404040"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/submitted_img_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        app:srcCompat="@android:drawable/checkbox_on_background" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submitted Succesfully !"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/submitted_img_icon"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"/>

</RelativeLayout>