<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".Login_Page">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="422dp"
        android:layout_height="270dp"
        app:srcCompat="@drawable/bshape"
        tools:layout_editor_absoluteX=""
        tools:layout_editor_absoluteY="" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="386dp"
        android:layout_height="291dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        app:srcCompat="@drawable/fadeimg"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="329dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Login Account"
        android:textColor="#404040"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Welcome To WeCare !"
        android:textColor="#070707"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@id/textView"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_round_person_outline_24" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#F3D068"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="Login"
        android:textColor="#404040"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nic_txt"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@drawable/login_edit_background"
        android:hint="NIC"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="#404040"
        android:textColorHint="#404040"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password_txt"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nic_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_edit_background"
        android:hint="Password"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="#404040"
        android:textColorHint="#404040"

        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_txt"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/password_txt"
        android:padding="5dp"
        android:text="Forget Password?"
        android:textColor="#404040"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Not Registered Yet ? Create an Account !"
        android:textColor="#404040"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text="Need any Help"
        android:textColor="#404040"
        android:textStyle="bold" />


</RelativeLayout>